<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/containeras"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sumit.kaushik.HBTUFacemash.aboutUs">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:elevation="1dp"
        android:orientation="vertical"
        android:weightSum="100">
        <LinearLayout
            android:id="@+id/sumit"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_weight="50"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textViewas1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_weight="70"
                    android:elevation="0dp"
                    android:text="Sumit Kaushik"

                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:typeface="sans"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:weightSum="90">

                    <ImageView
                        android:id="@+id/sumitContact"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="30"
                        android:baseline="0dp"
                        android:baselineAlignBottom="false"
                        android:cropToPadding="false"
                        android:elevation="0dp"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/whats" />

                    <ImageView
                        android:id="@+id/sumitFace"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="30"
                        android:elevation="3dp"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/face" />

                    <ImageView
                        android:id="@+id/sumitMail"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="30"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/mail" />
                </LinearLayout>
            </LinearLayout>

            <com.sumit.kaushik.HBTUFacemash.CircularImageView
                android:id="@+id/imageViewas2"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="37dp"
                android:layout_weight="50"
                android:elevation="0dp"
                android:src="@drawable/sumit" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <com.sumit.kaushik.HBTUFacemash.CircularImageView
                android:id="@+id/imageViewas1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="37dp"
                android:layout_weight="50"
                android:elevation="0dp"
                android:src="@drawable/pranav" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_weight="50"
                android:orientation="vertical"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textViewas2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_weight="70"
                    android:elevation="0dp"
                    android:text="PRANAV DUBEY"

                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    android:typeface="sans" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:weightSum="90">

                    <ImageView
                        android:id="@+id/pranavContacts"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="30"
                        android:cropToPadding="false"
                        android:elevation="0dp"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/whats" />

                    <ImageView
                        android:id="@+id/pranavFace"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="30"
                        android:elevation="3dp"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/face" />

                    <ImageView
                        android:id="@+id/pranavMail"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="30"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/mail" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/link"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        android:src="@drawable/pranav"
        android:visibility="invisible" />

</RelativeLayout>
